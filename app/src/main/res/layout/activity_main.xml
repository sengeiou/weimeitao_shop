<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:background="@color/white"
        android:id="@+id/flFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/whiteF8">

        <LinearLayout
            android:id="@+id/llHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivHome"
                android:layout_width="@dimen/dimen_23dp"
                android:layout_height="@dimen/dimen_23dp"
                android:layout_marginTop="@dimen/dimen_6dp"
                android:src="@drawable/select_main_home"/>

            <TextView
                android:id="@+id/tvHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textColor="@drawable/selector_text_333_theme"
                android:textSize="@dimen/dimen_11sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llScheme"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivScheme"
                android:layout_width="@dimen/dimen_23dp"
                android:layout_height="@dimen/dimen_23dp"
                android:layout_marginTop="@dimen/dimen_6dp"
                android:src="@drawable/select_main_scheme"/>

            <TextView
                android:id="@+id/tvScheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预约管理"
                android:textColor="@drawable/selector_text_333_theme"
                android:textSize="@dimen/dimen_11sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDecorate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/ivDecorate"
                android:layout_width="@dimen/dimen_33dp"
                android:layout_height="@dimen/dimen_33dp"
                android:layout_marginTop="@dimen/dimen_6dp"
                android:src="@drawable/select_main_decorate"/>

            <TextView
                android:id="@+id/tvDecorate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布"
                android:textColor="@drawable/selector_text_333_theme"
                android:textSize="@dimen/dimen_11sp"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDesign"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivDesign"
                android:layout_width="@dimen/dimen_23dp"
                android:layout_height="@dimen/dimen_23dp"
                android:layout_marginTop="@dimen/dimen_6dp"
                android:src="@drawable/select_main_charpenter"/>

            <TextView
                android:id="@+id/tvDesign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="严选货源"
                android:textColor="@drawable/selector_text_333_theme"
                android:textSize="@dimen/dimen_11sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llMe"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivMe"
                android:layout_width="@dimen/dimen_23dp"
                android:layout_height="@dimen/dimen_23dp"
                android:layout_marginTop="@dimen/dimen_6dp"
                android:src="@drawable/select_main_me"/>

            <TextView
                android:id="@+id/tvMe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人中心"
                android:textColor="@drawable/selector_text_333_theme"
                android:textSize="@dimen/dimen_11sp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>